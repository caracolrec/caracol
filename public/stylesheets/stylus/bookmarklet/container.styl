.caracolContainer
  position: relative
  height: 115px
  width: 100%
  text-align: center
  margin: 0 0
  z-index: 1
  opacity: 1
  background: #28343b; /* Old browsers */
  // background: -moz-linear-gradient(top, #b5bdc8 0%, #828c95 14%, #28343b 100%); /* FF3.6+ */
  // background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#b5bdc8), color-stop(14%,#828c95), color-stop(100%,#28343b)); /* Chrome,Safari4+ */
  // background: -webkit-linear-gradient(top, #b5bdc8 0%,#828c95 14%,#28343b 100%); /* Chrome10+,Safari5.1+ */
  // background: -o-linear-gradient(top, #b5bdc8 0%,#828c95 14%,#28343b 100%); /* Opera 11.10+ */
  // background: -ms-linear-gradient(top, #b5bdc8 0%,#828c95 14%,#28343b 100%); /* IE10+ */
  font-size: 24px
  font-family: 'Signika Negative',sans-serif
  color: #ff9000

button
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif

.caracolContainer button
  background-color: #ff9000
  color: #ffeed8
  text-shadow: none
  margin: 7px 7px

.caracolContainer button:hover
  background-color: #ffeed8
  color: #ff9000
  text-shadow: none

.caracolMain
  height: 115px
  width: 100%
  margin: 0 0

.title
  padding-top: 10px
  padding-bottom: 5px

.hide
  position: absolute
  top: 5px
  left: 5px

.component
  height: 115px

.component .snail
  padding-top: 5px
  padding-bottom: 5px
  padding-left: 25px
  width: 50px
  height: 31px
  background-repeat: no-repeat
  background-position: center
