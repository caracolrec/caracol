@media screen and (max-width: 10000px)
  .caracolContainer
    position: relative
    height: 100%
    width: 100%
    text-align: center
    margin: 0 0
    z-index: 1
    opacity: 1
    background: #28343b;
    font-size: 1.5em
    font-family: 'Signika Negative',sans-serif
    color: rgb(241,90,36)

  button
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif

  .caracolContainer button
    background-color: rgb(241,90,36)
    color: #ffeed8
    text-shadow: none
    margin: 3% 3%

  .caracolContainer button:hover
    background-color: #ffeed8
    color: rgb(241,90,36)
    text-shadow: none

  .caracolMain
    height: 100%
    width: 100%
    margin: 0 0

  .title
    padding-top: 5%
    padding-bottom: 3%

  .hide
    position: absolute
    top: 3%
    right: 3%

  .component
    height: 115px

  .component .snail
    padding-top: 3%
    padding-bottom: 3%
    padding-left: 10%
    width: 35%
    height: 25%
    background-repeat: no-repeat
    background-position: center
